pkgbase=linux-rt-lts-manjaro
pkgver=4.14
pkgname=(
    $pkgbase
    $pkgbase-headers
    $pkgbase-acpi_call
    $pkgbase-bbswitch
    $pkgbase-broadcom-wl
    $pkgbase-catalyst
    $pkgbase-nvidia
    $pkgbase-nvidia-304xx
    $pkgbase-nvidia-340xx
    $pkgbase-nvidiabl
    $pkgbase-r8168
    $pkgbase-rt3562sta
    $pkgbase-tp_smapi
    $pkgbase-vhba-module
    $pkgbase-virtualbox-guest-modules
    $pkgbase-virtualbox-host-modules
)
pkgrel=1
arch=('x86_64')
url="http://www.kernel.org/"
license=('GPL2')
groups=("$pkgbase-extramodules")
_depver=linux${pkgver//.}-rt

package_linux-rt-lts-manjaro() {
    pkgdesc="The ${pkgbase/linux/Linux} kernel and modules"
    depends=("$_depver")
}

package_linux-rt-lts-manjaro-headers() {
    pkgdesc="Header files and scripts for building modules for ${pkgbase/linux/Linux} kernel"
    depends=("$_depver-headers")
}

package_linux-rt-lts-manjaro-acpi_call() {
    pkgdesc='A linux kernel module that enables calls to ACPI methods through /proc/acpi/call'
    depends=("$_depver-acpi_call")
}

package_linux-rt-lts-manjaro-bbswitch() {
    pkgdesc='Kernel module allowing to switch dedicated graphics card on Optimus laptops'
    depends=("$_depver-bbswitch")
}

package_linux-rt-lts-manjaro-broadcom-wl() {
    pkgdesc='Broadcom 802.11 Linux STA wireless driver BCM43142.'
    depends=("$_depver-broadcom-wl")
}

package_linux-rt-lts-manjaro-catalyst() {
    pkgdesc='AMD/ATI Catalyst drivers for linux. fglrx kernel module only.'
    depends=("$_depver-catalyst")
}

package_linux-rt-lts-manjaro-nvidia() {
    pkgdesc='NVIDIA drivers for linux.'
    depends=("$_depver-nvidia")
}

package_linux-rt-lts-manjaro-nvidia-304xx() {
    pkgdesc='NVIDIA drivers for linux.'
    depends=("$_depver-nvidia-304xx")
}

package_linux-rt-lts-manjaro-nvidia-340xx() {
    pkgdesc='NVIDIA drivers for linux.'
    depends=("$_depver-nvidia-340xx")
}

package_linux-rt-lts-manjaro-nvidiabl() {
    pkgdesc='Driver to adjust display backlight on modern mobile NVidia graphics adapters.'
    depends=("$_depver-nvidiabl")
}

package_linux-rt-lts-manjaro-r8168() {
    pkgdesc='A kernel module for Realtek 8168 network cards'
    depends=("$_depver-r8168")
}

package_linux-rt-lts-manjaro-rt3562sta() {
    pkgdesc='Ralink RT3562 PCI WLAN adaptors kernel module'
    depends=("$_depver-rt3562sta")
}

package_linux-rt-lts-manjaro-tp_smapi() {
    pkgdesc="Modules for ThinkPad's SMAPI functionality"
    depends=("$_depver-tp_smapi")
}

package_linux-rt-lts-manjaro-vhba-module() {
    pkgdesc='Kernel module that emulates SCSI devices'
    depends=("$_depver-vhba-module")
}

package_linux-rt-lts-manjaro-virtualbox-guest-modules() {
    pkgdesc='Guest kernel modules for VirtualBox'
    depends=("$_depver-virtualbox-guest-modules")
}

package_linux-rt-lts-manjaro-virtualbox-host-modules() {
    pkgdesc='Host kernel modules for VirtualBox'
    depends=("$_depver-virtualbox-host-modules")
}
